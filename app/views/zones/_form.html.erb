<% if @regions.length >= 1 %>
  <%= form_for(zone) do |f| %>
    <% if zone.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(zone.errors.count, "error") %> prohibited this zone from being saved:</h2>

        <ul>
        <% zone.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :abbreviation %>
      <%= f.text_field :abbreviation %>
    </div>

    <div class="field">
      <%= f.label :identifier %>
      <%= f.text_field :identifier %>
    </div>

    <div>
      <%= f.label :region %>
      <%= f.select(:region_id, options_for_select(@regions)) %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% else %>
  <h1>No hay regiones existentes</h1>
<% end %>
